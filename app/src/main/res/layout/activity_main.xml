<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.home.ui.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="24sp"
        android:paddingTop="10sp"
        android:paddingRight="24sp"
        android:paddingBottom="10sp"
        android:textColor="#000000"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="current location"
        android:inputType="textPersonName"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/schoolbusimg" />

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button"
        android:text="TextView"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:drawablePadding="2dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/button"/>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start_service_btn"
        android:text="Start Location Service"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start_service_btn"
        android:text="Stop Location Service"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

</RelativeLayout>